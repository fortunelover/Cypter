<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cypter.View"
      xmlns:ViewModel="clr-namespace:Cypter.ViewModel" x:Class="Cypter.View.MenuPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">
    <Grid>
        <Menu Background="White" >
            <Menu.DataContext>
                <ViewModel:MenuViewModel/>
            </Menu.DataContext>
            <MenuItem Header="对称加密" Width="100"  BorderBrush="Black" Command="{Binding SelectPageCommand}" CommandParameter="1"/>
            <MenuItem Header="非对称加密"  Width="100" BorderBrush="Black"  Command="{Binding SelectPageCommand}" CommandParameter="2"/>
            <MenuItem Header="非对称加密"  Width="100" BorderBrush="Black" />
        </Menu>
    </Grid>
</Page>
